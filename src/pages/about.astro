---
import "../styles/global.css"

const pageTitle = "About Me"
const identity = {
  firstName: "Sophia",
  country: "Canada",
  occupation: "Artist",
  hobbies: ["kickboxing", "gardening", "reading"],
}
const showLocations = ["Canada", "Europe", "Japan", "the United States"]
const happy = true
const finished = false
const goal = 3

const locColor = "#F97906"
const fontWeight = 700
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <style define:vars={{ locColor, fontWeight }}>
      h1 {
        color: peachpuff;
        font-size: 4rem;
      }
      .location {
        color: var(--locColor);
        font-weight: var(--fontWeight);
      }
    </style>
  </head>
  <body>
    <a href="/">Home</a>
    <a href="/about/">About</a>
    <a href="/works/">Works</a>
    <a href="/blog/">Blog</a>
    <h1>{pageTitle}</h1>

    <p>Here are a few facts about me:</p>
    <ul>
      <li>My name is {identity.firstName}.</li>
      <li>
        I live in {identity.country} and I work as a {
          identity.occupation.toLowerCase()
        }.
      </li>
      {
        identity.hobbies.length >= 2 && (
          <li>
            Two of my hobbies are: {identity.hobbies[0]} and{" "}
            {identity.hobbies[1]}
          </li>
        )
      }
    </ul>
    <p>I've exhibited in:</p>
    <ul>
      {showLocations.map((loc) => <li class="location">{loc}</li>)}
    </ul>
    {happy && <p>I am happy to be learning Astro!</p>}

    {finished && <p>I finished this tutorial!</p>}

    {
      goal === 3 ? (
        <p>My goal is to finish in 3 days.</p>
      ) : (
        <p>My goal is not 3 days.</p>
      )
    }
  </body>
</html>
